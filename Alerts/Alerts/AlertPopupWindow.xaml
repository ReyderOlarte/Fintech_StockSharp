<Window
		x:Class="StockSharp.Studio.Services.Alerts.AlertPopupWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="200" Width="400">
    <Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="TimeCtrl" FontWeight="Bold" FontSize="30" Grid.Row="0" HorizontalAlignment="Center"></TextBlock>
		
		<TextBlock x:Name="MessageCtrl" FontWeight="Bold" Foreground="Red" FontSize="20" Grid.Row="1" TextWrapping="Wrap" Margin="0,20,0,0"></TextBlock>
    </Grid>
</Window>